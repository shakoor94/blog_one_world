{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('article', {'id': article.id}) }}">{{ article.title }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
