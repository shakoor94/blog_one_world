{% extends 'base.html.twig' %}

{% block title %}
	{{ country.title }}
	- Détails du pays
{% endblock %}

{% block body %}
	<header style="background-image: url('{{ asset('uploads/' ~ country.image) }}');">


		<h1>{{ country.title }}</h1>

	</header>
	<main>


		<!-- Ajoutez d'autres détails du pays ici -->

		{# <img src="{{ asset('uploads/' ~ country.image) }}" alt="{{ country.title }}"> #}
			<section id="description_country"> <h2>Déscription</h2>
			<p>
				{{ country.description }}
			</p>
		</section>


		<h2>Articles correspondant à
			{{ country.title }}</h2>
		{% if articles is empty %}
			<p>Aucun article trouvé pour ce pays.</p>
		{% else %}
			{% for article in articles %}
				<section id="last_article">
					<div class="container_card_article">
						<div class="card_article">
							<img src="{{ asset('uploads/' ~ article.image) }}" alt="{{ article.title }}">
							<div class="info">
								<h3 class="titleImg">
									{{ article.title }}<br>
									<br>
								</h3>
								<a href="{{ path('article', {'id': article.id}) }}" class="btn">En savoir plus</a>
							</div>
						</div>
					</div>
				</section>
			{% endfor %}
		{% endif %}


	</main>
{% endblock %}
