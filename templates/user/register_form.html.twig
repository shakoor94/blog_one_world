{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}

	<section class="bg-register" style="background-image: url('{{ asset('images/bg-register.jpeg') }}');">

		<div class="block_form">
			<div class="groupform">
				<div class="formular">
					<form method="post">
						<h3 class="">Inscrivez-vous !</h3>
						<hr>
						{{form_start(form)}}

						<div class="groupform1">
							<div class="block-input">{{form_row(form.firstname)}}</div>
							<div class="block-input">{{form_row(form.lastname)}}</div>
						</div>
						<div class="groupform2">
							<div class="block-input">{{form_row(form.pseudo)}}</div>
							<div class="block-input">{{form_row(form.email)}}</div>

						</div>
						<div class="block-input">{{form_row(form.password)}}</div>
<p class="block_condition_form">En vous inscrivant, vous acceptez les <a href="">Conditions d'utilisation </a> et la <a href="">Politique de confidentialit√©</a>, notamment <a href="">l'Utilisation des cookies</a>.</p>
						
						{{form_end(form)}}
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
